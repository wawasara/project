extends layout

block content
  .container
    h1 로그인 페이지
    p.lead Say something worthwhile here.
    br
    form(role='form', action='/login', method='post', style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name='username', placeholder='로그인 아이디')
      .form-group
        input.form-control(type='password', name='password', placeholder='비밀번호')
      button.btn.btn-default(type='submit') 로그인
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type='button') 취소